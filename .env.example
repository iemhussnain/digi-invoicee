# App
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/digi-invoice-erp
# Or MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/digi-invoice-erp?retryWrites=true&w=majority

# NextAuth (Auth.js v5)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# FBR API
FBR_SANDBOX_URL=https://gw.fbr.gov.pk
FBR_PRODUCTION_URL=https://gw.fbr.gov.pk
FBR_SANDBOX_TOKEN=
FBR_PRODUCTION_TOKEN=

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@digi-invoice.com

# AWS S3 (Optional - for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=digi-invoice-files

# Sentry (Error Tracking - Optional)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
